@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<section id="form-detail" class="register-form">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2 >Create a new account</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="text" placeholder="First Name" asp-for="Input.FirstName" />
        <span asp-validation-for="Input.FirstName" class="text-danger"></span>

        <input type="text" placeholder="Last Name" asp-for="Input.LastName" />
        <span asp-validation-for="Input.LastName" class="text-danger"></span>

        <input maxlength="11" type="number" placeholder="Phone Number" asp-for="Input.Phone" />
        <span asp-validation-for="Input.Phone" class="text-danger"></span>

        <input type="email" placeholder="Email" asp-for="Input.Email" autocomplete="username" aria-required="true" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>

        <input placeholder="Password" asp-for="Input.Password" autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>

        <input placeholder="Confirm Password" asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

        <button type="submit" class="normal">Register</button>
    </form>
    <div class="side-art">
        <div>
            <span>SIGN UP AND START BUYING</span>
            <img src="/img/a6-removebg-preview.png" />
        </div>
        
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
