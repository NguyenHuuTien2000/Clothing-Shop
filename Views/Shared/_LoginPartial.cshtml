
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item" id="avatar">
        @if (UserManager.GetUserAsync(User).Result.Avatar != null)
        {
            <img width="40" height="40" style="object-fit:cover; border-radius:30px" src="/@UserManager.GetUserAsync(User).Result.Avatar">
        } else
        {
            <img width="40" height="40" style="object-fit:cover; border-radius:30px" src="/img/user.png">
        }
    </li>
    <li class="nav-item" id="user-manage">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <a asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Logout</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
