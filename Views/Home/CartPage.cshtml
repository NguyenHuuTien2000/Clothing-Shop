@model IEnumerable<Computer_Store.Models.CartItems>

@{
    ViewData["Title"] = "Cart";
}

<h1>Your Cart</h1>

<table class="table table-bordered table-striped align-middle cart-table">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Price) (Discount Applied)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src=@item.Product.Image class="img-thumbnail" width="150">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Brand)
            </td>
                if (item.Product.Discount == 0)
                {
                    @Html.DisplayFor(modelItem => item.Product.DisplayPrice) VND
                } else {
                    @Html.DisplayFor(modelItem => item.Product.DisplayDiscountedPrice) VND
                }
            <td>
                <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Remove</a>
            </td>
        </tr>
}
    </tbody>
</table>
<a class="btn btn-outline-primary rounded rounded-pill">Buy</a>

