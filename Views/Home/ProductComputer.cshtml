@model Computer_Store.Models.Computer


<div class="container mt-5">
    <div class="row">
        <div class="col-6">
            <img src= "/@Model.Image" width="650" height="650"/>
        </div>
        <div class="col-6">
            <h4 class="mb-3">@Html.DisplayFor(model => model.Name)</h4>
            <div class="price-tag mt-2">
                <p>Buy now</p>
                @if (Model.Discount == 0)
                {
                    <p>@Model.Price</p>
                } 
                else
                {
                    <p class="text-danger">@Model.DisplayDiscountedPrice đ</p>
                    <p class="card-price-discounted">@Model.DisplayPrice đ</p>
                }
            </div>
            <form class="text-center mb-2">
                <button type="submit" class="btn btn-outline-dark rounded-pill"><i class="fa fa-shopping-cart"></i> Add to cart</button>
            </form>
            <partial name="_SpecTable"></partial>
        </div>
    </div>
</div>
